<idea-plugin>
    <id>com.khope.cornermascot</id>
    <name>Corner Mascot</name>
    <vendor email="piyrw9754@gmail.com" url="https://github.com/rlaope">khope</vendor>
    <version>1.0.0</version>

    <idea-version since-build="241"/>

    <description><![CDATA[
        This plugin displays a small mascot image at the bottom-right corner of the IntelliJ window, and allows users to set a custom local image through the settings panel.
    ]]></description>

    <change-notes><![CDATA[
        - First release<br>
    ]]></change-notes>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.khope.cornermascot.CornerMascotStartupActivity"/>
        <applicationConfigurable instance="com.khope.cornermascot.MascotSettingsConfigurable"/>
        <applicationService serviceImplementation="com.khope.cornermascot.MascotSettingsState"/>
    </extensions>
</idea-plugin>
